---
import { Image } from "astro:assets";
---

<style lang="scss">
  header {
    z-index: 10000;
  }
</style>

<header
  class="fixed inset-0 mx-auto mt-1.5 flex h-11 max-w-3xl content-center items-center rounded-full
  border-2 border-zinc-500 border-opacity-50 bg-zinc-50 bg-opacity-50 pl-0.5 pr-0.5 text-hedgehog-5 shadow-md shadow-zinc-800 backdrop-blur-md"
>
  <div class="grid grid-flow-col items-center gap-x-0.5">
    <Image
      class="max-h-9 rounded-full"
      src="/images/logo.jpg"
      alt="HEDGEHOG.INC"
      width="36"
      height="36"
    />
    <a class="select-none text-xl font-bold" href="/">HEDGEHOG.INC</a>
  </div>
</header>
